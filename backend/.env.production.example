# Production Environment Configuration
# Copy this to .env and fill in real values

# Database (use managed Postgres for production)
DATABASE_URL=postgresql://user:password@host:5432/insight_atlas

# Security
JWT_SECRET=<generate-strong-random-secret-256-bits>

# Mode
DEMO_MODE=false

# CORS (set to your actual frontend domain)
CORS_ORIGINS=https://insight-atlas.vercel.app

# App Base URL (for Stripe redirects)
APP_BASE_URL=https://insight-atlas.vercel.app

# Stripe
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_PRO_MONTHLY=price_...
STRIPE_PRICE_YEARLY=price_...

# OpenAI (optional)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4.1-mini
OPENAI_POLISH_ENABLED=true

# Rate Limiting
RATE_LIMIT_RPM=60

# Observability (optional)
SENTRY_DSN=https://...@sentry.io/...
LOG_LEVEL=INFO
